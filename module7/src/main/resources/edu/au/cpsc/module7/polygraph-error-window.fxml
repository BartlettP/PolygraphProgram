<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane maxHeight="250.0" maxWidth="250.0" prefHeight="250.0" prefWidth="250.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.au.cpsc.module7.PolygraphErrorWindow">
   <children>
      <VBox alignment="CENTER" maxHeight="300.0" maxWidth="375.0" prefHeight="300.0" prefWidth="375.0" styleClass="root" stylesheets="@Style/error.css">
         <children>
            <Label styleClass="root" text="ERROR!" />
            <Label styleClass="root" text="Make sure all fields are filled in." />
            <HBox alignment="TOP_CENTER" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Button fx:id="okButton" mnemonicParsing="false" onAction="#closeWindowAction" text="OK" />
                  <Button mnemonicParsing="false" onAction="#closeWindowAction" text="Close" />
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
